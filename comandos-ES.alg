algoritmo "Comandos de entrada e saída"
var
  nome: Caractere  
  n1, n2, soma: Inteiro
Inicio

  escreval("Digite seu nome: ")
  leia (nome)
  escreval("Informe um número: ")
  leia(n1)
  escreval("Informe outro número: ")
  leia(n2)
  soma <- n1 + n2
  escreva(nome, ", a soma dos números que você informou é igual á ", soma, ".")
 
fimalgoritmo
