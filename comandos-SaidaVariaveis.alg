algoritmo "Comando de saída e declaração de variáveis"
var
    //declarando variável
    ola, msg: Caractere;                                                  
inicio

    //atribuindo valor a variável
    ola <- "Olá, mundo!"
    msg <- "Me livrei da maldição."
    //comando de saída utilizando variável
    escreval(ola)
    escreva(msg)

fimalgoritmo